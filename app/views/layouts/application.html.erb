<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script defer src="https://use.fontawesome.com/releases/v5.1.0/js/all.js" integrity="sha384-3LK/3kTpDE/Pkp8gTNp2gR/2gOiwQ6QaO7Td0zV76UFJVhqLl4Vl3KL1We6q6wR9" crossorigin="anonymous"></script>
  </head>

  <body>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <div class="row"->
        <div class="col-lg-4">
          <a class="navbar-brand" href="/">Bookers</a>
        </div>
      </div>

        <% if user_signed_in? %>
         <div class="row">
          <ul class "navbar-nav list-inline">
            <li class="list-inline-item">
              <i class="fas fa-home text-light"></i>
              <%= link_to "Home", user_path(current_user.id), :style=>"color:#fff;" %>
            </li>
            <li class="list-inline-item">
              <i class="fas fa-users text-light"></i>
              <%= link_to "Users", users_path, :style=>"color:#fff;" %>
            </li>
            <li class="list-inline-item">
              <i class="fas fa-book-open text-light"></i>
              <%= link_to "Books", books_path, :style=>"color:#fff;" %>
            </li>
            <li class="list-inline-item">
              <i class="fas fa-sign-out-alt text-light"></i>
              <%= link_to "logout", destroy_user_session_path, method: :delete, :style=>"color:#fff;" %>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav ml-auto px-8 list-group list-group-horizontal">
            <li>
              <i class="fas fa-home text-light"></i>
              <%= link_to "Home", root_path, :style=>"color:#fff;" %>
            </li>
            <li>
              <i class="fas fa-link text-light"></i>
              <%= link_to "About", home_about_path, :style=>"color:#fff;" %>
            </li>
            <li>
              <i class="fas fa-user-plus text-light"></i>
              <%= link_to "sign up", new_user_registration_path, :style=>"color:#fff;" %>
            </li>
            <li><i class="fas fa-sign-in-alt text-light"></i>
              <%= link_to "login", new_user_session_path, :style=>"color:#fff;" %>
            </li>
        <% end %>
          </ul>
        </div>
    </div>
   </nav>

        <%= yield %>

  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>

  </body>
</html>
