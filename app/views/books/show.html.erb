<!--サクセス・エラーメッセージ-->
<%= render 'devise/shared/message' %>
<!---->

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<!--部分テンプレート-->
<%= render 'devise/shared/left', user:@user, book: Book.new %>
<!---->

    </div>
<div class="col-md-8 offset-md-1">

<h1>Book detail</h1>

<table class="table">
  <tr>
    <td>
      <%= attachment_image_tag @book_detail.user, :profile_image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg" %>
      <p><%= link_to @book_detail.user.name, user_path(@book_detail.user.id) %></p>
    </td>
    <td><%= @book_detail.title %></td>
    <td><%= @book_detail.body %></td>
    <% if @book_detail.user == current_user %>
      <td><button type="button" class="btn btn-success btn-sm"><%= link_to 'Edit',edit_book_path(@book_detail), :style=>"color:#fff;" %></button></td>
      <td><button type="button" class="btn btn-danger btn-sm"><%= link_to 'Destroy',@book, method: :delete, "data-confirm" => "本当に削しますか？", :style=>"color:#fff;" %></button></td>
    <% end %>
   </tr>
</table>

 </div>
 </div>
</div>