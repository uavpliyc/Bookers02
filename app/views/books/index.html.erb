<!--サクセス・エラーメッセージ-->
<%= render 'devise/shared/message' %>
<!---->

<!--部分テンプレート-->
<%= render 'devise/shared/left', user:@user, book:@book %>
<!---->
<h1>Books</h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(book.user) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg', fallback: "no_image.jpg" %>
      <% end %>
    </td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>