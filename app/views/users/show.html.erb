<!--サクセス・エラーメッセージ-->
<%= render 'devise/shared/message' %>
<!---->

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<!--部分テンプレート-->
<%= render 'devise/shared/left', user:@user, book:@book %>
<!---->
     </div>

<div class="col-md-8 offset-md-1">

<h1>Books</h1>

<table class="table">
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format:'jpeg', fallback: "no_image.jpg" %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>

  </div>
 </div>
</div>